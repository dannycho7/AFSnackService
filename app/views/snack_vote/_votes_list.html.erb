<h1 class="header" >
  Snack votes currently cast:
</h1>

<div>
  <table class="striped">
    <thead>
      <tr>
        <td>
          Name of Snack
        </td>
        <td>
          Yes Votes
        </td>
        <td>
          No Votes
        </td>
      </tr>
    </thead>
    <tbody>
    <% Snack.all.each do |snack| %>
      <tr>
        <td>
          <%= snack.name %>
        </td>
        <td>
          <%= snack.votes.count { |vote| vote.value == 1 }
          %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
